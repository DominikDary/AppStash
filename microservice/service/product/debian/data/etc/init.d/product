#! /bin/sh

PATH=/sbin:/bin:/usr/sbin:/usr/bin:/etc/init.d
. /lib/lsb/init-functions

cd /usr/share/shop/product/bin/

case "$1" in
    start)
        log_daemon_msg "Starting product service"
        nohup ./product -Dconfig.file=/etc/product/application.conf > /var/log/product.log 2>&1 &
        sleep 1
        log_end_msg 0 || true
        ;;
    restart|reload|force-reload)
        log_daemon_msg "Restart product service"
        kill `ps ax|grep product|sed 's/\(.*\)pts.*/\1/g'|head -n 1`
        nohup ./product/bin/product -f /etc/product/application.conf > /var/log/product.log 2>&1 &
        sleep 1
        log_end_msg 0 || true
        ;;
    stop)
        kill `ps ax|grep product|sed 's/\(.*\)pts.*/\1/g'|head -n 1`
        ;;
    *)
        echo "Usage: $0 start|restart|stop" >&2
        exit 3
        ;;
esac