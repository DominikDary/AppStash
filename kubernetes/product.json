{
  "id": "product",
  "kind": "ReplicationController",
  "apiVersion": "v1beta1",
  "desiredState": {
    "replicas": 2,
    "replicaSelector": {"name": "product"},
    "podTemplate": {
      "desiredState": {
        "manifest": {
          "version": "v1beta1",
          "id": "product",
          "containers": [
            {
              "name": "product",
              "image": "zutherb/product-service",
              "cpu": 100,
              "memory": 500000000,
              "ports": [
                {
                  "containerPort": 18080,
                  "hostPort": 18080
                }
              ]
            }
          ]
        }
      },
      "labels": {
        "name": "product",
        "uses": "mongodb"
      }
    }
  },
  "labels": {"name": "product"}
}